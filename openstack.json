					"volumeSpecs": [
						{
							"hostPath": "/var/log/openstack/glance",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						}
					],
					
					"isPrivileged": false,
					"dns": [],
					"networkMode": "bridge",
					"enableServiceNetworking": false,
					"user": "",
					"properties": {
						"HOST_NAME": "{NIRMATA_HOST_NAME}",
						"MYSQL_DB": "{mysql.NIRMATA_SERVICE_HOST_NAME}",
						"MYSQL_USER": "admin",
						"MYSQL_PASSWORD": "password",
						"RABBITMQ_HOST": "{rabbitmq.NIRMATA_SERVICE_HOST_NAME}",
						"RABBITMQ_PASSWORD": "password",
						"GLANCE_DBPASS": "password"
					},
					"portMappings": [
						{
							"containerPort": 9292,
							"type": "HTTP",
							"hostPort": 9292,
							"name": "GLANCE_PORT",
							"enableServiceNetworking": false
						}
					],
					"healthCheck": [
						{
							"type": "NONE",
							"startDelay": 10,
							"checkInterval": 10,
							"checkTimeout": 10,
							"failureThreshold": 3,
							"successThreshold": 1,
							"path": ""
						}
					]
				}
