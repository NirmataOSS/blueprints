			"dependsOn": [
				{
					"name": "keystone"
				},
				{
					"name": "mysql"
				},
				{
					"name": "rabbitmq"
				}
			]
		},
		{
			"name": "nova",
			"imageRepository": "nirmata/os-nova",
			"tag": "latest",
			"cluster": false,
			"serviceSpec": [
				{
					"runCommand": "",
					"hostname": "nova",
					"volumeMappings": [
						"/var/log/openstack/nova:/var/log/supervisor"
					],										

					"volumeSpecs": [
						{
							"hostPath": "/var/log/openstack/nova",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
