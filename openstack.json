				{
					"name": "mysql"
				},
				{
					"name": "rabbitmq"
				}
			],
			"requiredBy": [
				{
					"name": "glance"
				},
				{
					"name": "nova"
				}
			]
		},
		{
			"name": "glance",
			"imageRepository": "nirmata/os-glance",
			"tag": "latest",
			"cluster": false,
			"serviceSpec": [
				{
					"runCommand": "",
					"hostname": "glance",
					"volumeMappings": [
						"/var/log/openstack/glance:/var/log/supervisor"
