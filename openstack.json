{
	"name": "OpenStack",
	"description": "Nirmata blueprint to deploy OpenStack sandbox",
	"services": [
		{
			"name": "mysql",
			"imageRepository": "nirmata/os-mysql",
			"tag": "latest",
			"cluster": false,
			"serviceSpec": [
				{
					"runCommand": "",
					"hostname": "",
					"volumeMappings": [],
					"isPrivileged": false,
					"dns": [],
					"networkMode": "bridge",
					"enableServiceNetworking": false,
					"user": "",
					"properties": {
						"MYSQL_PASS": "password"
					},
					"portMappings": [
						{
							"containerPort": 3306,
							"type": "TCP",
							"hostPort": 3306,
							"name": "MYSQL_PORT",
							"enableServiceNetworking": false,
							"healthCheck": [
								{
									"type": "TCP",
									"startDelay": 10,
									"checkInterval": 10,
									"checkTimeout": 10,
									"failureThreshold": 3,
									"successThreshold": 1,
									"path": ""
								}
							]
						}
					],
					"healthCheck": [
						{
							"type": "TCP",
							"startDelay": 10,
							"checkInterval": 10,
							"checkTimeout": 10,
							"failureThreshold": 3,
							"successThreshold": 1,
							"path": "",
							"endpoint": [
								{
									"containerPort": 3306
								}
							]
						}
					]
				}
			],
			
			"requiredBy": [
				{
					"name": "keystone"
				},
				{
					"name": "glance"
				},
				{
					"name": "nova"
				}
			]
		},
		{
			"name": "rabbitmq",
			"imageRepository": "nirmata/os-rabbitmq",
			"tag": "latest",
			"cluster": false,
			"serviceSpec": [
				{
					"runCommand": "",
					"hostname": "",
					"volumeMappings": [
						"/var/log/openstack/rabbitmq:/var/log/supervisor"
					],
					
					"volumeSpecs": [
						{
							"hostPath": "/var/log/openstack/rabbitmq",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						}
					],
					
					"isPrivileged": false,
					"dns": [],
					"networkMode": "bridge",
					"enableServiceNetworking": false,
					"user": "",
					"properties": {
						"RABBITMQ_PASSWORD": "password"
					},
					"portMappings": [
						{
							"containerPort": 5672,
							"type": "TCP",
							"hostPort": 5672,
							"name": "RABBITMQ_NODE_PORT",
							"enableServiceNetworking": false
						},
						{
							"containerPort": 15672,
							"type": "TCP",
							"hostPort": 15672,
							"name": "RABBITMQ_DIST_PORT",
							"enableServiceNetworking": false
						}
					],
					"healthCheck": [
						{
							"type": "NONE",
							"startDelay": 10,
							"checkInterval": 10,
							"checkTimeout": 10,
							"failureThreshold": 3,
							"successThreshold": 1,
							"path": ""
						}
					]
				}
			],
			
			"requiredBy": [
				{
					"name": "keystone"
				},
				{
					"name": "glance"
				},
				{
					"name": "nova"
				}
			]
		},
		{
			"name": "keystone",
			"imageRepository": "nirmata/os-keystone",
			"tag": "latest",
			"cluster": false,
			"serviceSpec": [
				{
					"runCommand": "",
					"hostname": "keystone",
					"volumeMappings": [
						"/var/log/openstack/keystone:/var/log/supervisor"
					],				

					"volumeSpecs": [
						{
							"hostPath": "/var/log/openstack/keystone",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						}
					],
					
					"isPrivileged": false,
					"dns": [],
					"networkMode": "bridge",
					"enableServiceNetworking": false,
					"user": "",
					"properties": {
						"HOST_NAME": "{NIRMATA_HOST_NAME}",
						"MYSQL_DB": "{mysql.NIRMATA_SERVICE_HOST_NAME}",
						"MYSQL_USER": "admin",
						"MYSQL_PASSWORD": "password",
						"ADMIN_TOKEN": "password",
						"KEYSTONE_DBPASS": "password"
					},
					"portMappings": [
						{
							"containerPort": 35357,
							"type": "HTTP",
							"hostPort": 35357,
							"name": "KEYSTONE_PORT",
							"enableServiceNetworking": false
						},
						{
							"containerPort": 5000,
							"type": "HTTP",
							"hostPort": 5000,
							"name": "KEYSTONE_API_PORT",
							"enableServiceNetworking": false
						}
					],
					"healthCheck": [
						{
							"type": "NONE",
							"startDelay": 10,
							"checkInterval": 10,
							"checkTimeout": 10,
							"failureThreshold": 3,
							"successThreshold": 1,
							"path": ""
						}
					]
				}
			],
