			"name": "horizon",
			"imageRepository": "nirmata/os-horizon",
			"tag": "latest",
			"cluster": false,
			"serviceSpec": [
				{
					"runCommand": "",
					"hostname": "horizon",
					"volumeMappings": [
						"/var/log/openstack/horizon:/var/log/supervisor",
						"/var/log/openstack/apache2:/var/log/apache2"
					],
					
					

					"volumeSpecs": [
						{
							"hostPath": "/var/log/openstack/horizon",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						},
						{
							"hostPath": "/var/log/openstack/horizon",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						}
