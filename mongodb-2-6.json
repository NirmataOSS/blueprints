{
	"name": "MongoDB-2-6",
	"description": "MongoDB (from humongous) is a cross-platform document-oriented database. MongoDB eschews the traditional table-based relational database structure in favor of JSON-like documents with dynamic schemas.\nBy default this blueprint defines a clusters with 3 nodes. It means you must use a host group within at least 3 connected hosts to deploy this MongoDB cluster.",
	"services": [
		{
			"name": "mongodb",
			"imageRepository": "nirmata/mongodb-2.6",
			"tag": "latest",
			"cluster": true,
			"serviceSpec": [
				{
					"runCommand": "",
					"properties": {},
					"hostname": "",
					"volumeMappings": [
						"/mnt/nirmata/{NIRMATA_ENVIRONMENT_NAME}/mongodb/supervisor:/var/log/supervisor",
						"/mnt/nirmata/{NIRMATA_ENVIRONMENT_NAME}/mongodb/data:/data/db"
					],
					
					"volumeSpecs": [
						{
							"hostPath": "/mnt/nirmata/{NIRMATA_ENVIRONMENT_NAME}/mongodb/supervisor",
							"containerMountPoint": "/var/log/supervisor",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						},
						{
							"hostPath": "/mnt/nirmata/{NIRMATA_ENVIRONMENT_NAME}/mongodb/data",
							"containerMountPoint": "/data/db",	
							"type": "hostDirectory",
							"volumeName": "",
							"size": 16
						}
					],
					
					"isPrivileged": false,
					"dns": [],
					"networkMode": "bridge",
					"enableServiceNetworking": false,
					"user": "",
					"portMappings": [
						{
							"containerPort": 27017,
							"type": "TCP",
							"hostPort": 27017,
							"name": "SERVICE_PORT",
							"enableServiceNetworking": false
						}
					],
					"healthCheck": [
						{
							"type": "NONE",
							"startDelay": 10,
							"checkInterval": 10,
							"checkTimeout": 10,
							"failureThreshold": 3,
							"successThreshold": 1,
							"path": ""
						}
					]
				}
			],
			"serviceScalingRules": [
				{
					"desiredCount": 3,
					"autoRecovery": false
				}
			]
		}
	],
	"serviceScalingRules": [
		{
			"desiredCount": 3,
			"autoRecovery": false,
			"services": [
				{
					"name": "mongodb"
				}
			]
		}
	]
}
